{
  "name": "televue",
  "author": {
    "name": "Gleb Sakharov",
    "url": "https://skhr.vg"
  },
  "license": "MIT",
  "description": "Vue 3 components for Telegram widgets",
  "repository": {
    "type": "git",
    "url": "https://github.com/skhrvg/televue.git"
  },
  "bugs": {
    "url": "https://github.com/skhrvg/televue/issues"
  },
  "homepage": "https://televue.skhr.vg",
  "keywords": [
    "vue",
    "vue 3",
    "components",
    "telegram",
    "telegram widget",
    "component",
    "telegram passport",
    "oauth",
    "vite",
    "typescript",
    "library"
  ],
  "version": "0.1.0-dev3",
  "scripts": {
    "lib:watch": "vue-tsc --emitDeclarationOnly && vite build --watch",
    "lib:build": "vue-tsc --emitDeclarationOnly && vite build",
    "docs:dev": "sudo vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs"
  },
  "files": [
    "dist",
    "types"
  ],
  "main": "./dist/televue.umd.js",
  "module": "./dist/televue.es.js",
  "types": "./types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/televue.es.js",
      "require": "./dist/televue.umd.js"
    }
  },
  "peerDependencies": {
    "vue": "^3.2.37"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.26.1",
    "@types/node": "^18.7.6",
    "@vitejs/plugin-vue": "^3.0.1",
    "autoprefixer": "^10.4.8",
    "eslint": "^8.22.0",
    "eslint-plugin-vue": "^9.3.0",
    "postcss": "^8.4.16",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.7.4",
    "vite": "^3.0.8",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-mkcert": "^1.9.0",
    "vitepress": "^1.0.0-alpha.8",
    "vue-tsc": "^0.40.1"
  },
  "postcss": {
    "plugins": {
      "tailwindcss": {},
      "autoprefixer": {}
    }
  }
}
